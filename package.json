{
  "name": "search-buddy",
  "displayName": "Search Buddy",
  "description": "Search selected text in Google, StackOverflow, DuckDuckGo and Github without leaving VSCode",
  "version": "1.0.5",
  "keywords": [
    "search",
    "google",
    "stackoverflow",
    "github",
    "duckduckgo",
    "web",
    "souyang",
    "vscode",
    "searchbuddy"
  ],
  "publisher": "souyang",
  "engines": {
    "vscode": "^1.30.0"
  },
  "activationEvents": [
    "onCommand:extension.searchByGoogle",
    "onCommand:extension.searchByStackOverflow",
    "onCommand:extension.searchByGithub",
    "onCommand:extension.searchByDuckDuckGo"
  ],
  "license": "MIT",
  "author": {
    "name": "Simon Ouyang",
    "url": "https://www.github.com/souyang"
  },
  "icon": "resources/icon.png",
  "homepage": "https://www.github.com/souyang/search-buddy",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/souyang/search-buddy"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "extension.searchByGoogle",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "extension.searchByStackOverflow",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "extension.searchByGithub",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "extension.searchByDuckDuckGo",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.searchByGoogle",
        "title": "%extession.searchByGoogle%"
      },
      {
        "command": "extension.searchByStackOverflow",
        "title": "%extession.searchByStackOverflow%"
      },
      {
        "command": "extension.searchByGithub",
        "title": "%extession.searchByGithub%"
      },
      {
        "command": "extension.searchByDuckDuckGo",
        "title": "%extession.searchByDuckDuckGo%"
      }
    ],
    "configuration": {
      "title": "Search Buddy Config",
      "type": "object",
      "properties": {
        "searchByGoogle.QueryTemplate": {
          "type": "string",
          "default": "https://www.google.com/search?q=%SELECTION%",
          "description": "%extession.searchByGoogle%"
        },
        "searchByStackOverflow.QueryTemplate": {
          "type": "string",
          "default": "https://stackoverflow.com/search?q=%SELECTION%",
          "description": "%extession.searchByStackOverflow%"
        },
        "searchByGithub.QueryTemplate": {
          "type": "string",
          "default": "https://github.com/search?q=%SELECTION%&type=code",
          "description": "%extession.searchByGithub%"
        },
        "searchByDuckDuckGo.QueryTemplate": {
          "type": "string",
          "default": "https://duckduckgo.com/?q=%SELECTION%",
          "description": "%extession.searchByDuckDuckGo%"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "vscode-test",
    "package": "npm run pretest && vsce package",
    "publish": "vsce publish",
    "lint": "npx eslint . --ext .ts --fix",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "build": "tsc -p ./",
    "pretest": "npm run build && npm run lint && npm run prettier"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vscode/l10n-dev": "^0.0.30",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "@types/vscode": "^1.30.0",
    "@vscode/l10n": "^0.0.17"
  }
}
